    <script>
            //GET処理
    $("#getbutton").click(function(e){
        let values = {
            name: $("#textvalue").val()
        };
        $.ajax({
            type: "GET",
            data: values,
            dataType: "JSON",
            url: "/users",
        }).done(function(results){
            console.log(typeof results);
            console.log(results);
            $("#output").append("GET:"+results.name+"<br>");
        }).fail(function(xhr , textStatus , errorThrown){
            console.log("ajax通信に失敗しました");
